<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjc.seektam.mapper.RestaurantDAO">
	<select id="selectRestaurant" parameterType="map" resultType="restaurantDTO">
		select * from restaurant where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
	
	<select id="getResComment" resultType="resCommentDTO">
		SELECT * from res_comment where res_num=#{resId}
	
	</select>
<!-- ////////////////////////////////////////////// -->	
	
	
	
	<insert id="insertMember" parameterType="memberDTO">
		insert into member values(#{id},#{pw},#{email},#{mobile},#{area1},#{area2},#{birth},#{reputation},#{platform_type},#{access_token},sysdate)
	</insert>
	<select id="idPwCheck" parameterType="memberDTO" resultType="int">
		select count(*) from member where id=#{id} and pw=#{pw}
	</select>
	<update id="updateMember" parameterType="memberDTO">
		<!-- 동적 sql -->
		update member
		<trim prefix="set" suffixOverrides=",">
			<if test="pw != null">pw=#{pw},</if>
			<!-- dto에 age의 값을 int(기본형)으로 하면 아래 null대신 0을 써야함 -->
			<if test="email != null">email=#{email},</if>
			<if test="mobile != null">mobile=#{mobile},</if>
			<if test="area1 != null">area1=#{area1},</if>
			<if test="area2 != null">area2=#{area2},</if>
			<if test="birth != null">birth=#{birth}</if>
		</trim>
		where id=#{id}
	</update>
	<delete id="deleteMember" parameterType="string">
		delete from member where id=#{id}
	</delete>
	<select id="idAvail" parameterType="string" resultType="int">
		select count(id) from member where id=#{id}
	</select>
</mapper>